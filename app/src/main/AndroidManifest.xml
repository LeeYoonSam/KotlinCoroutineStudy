<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ys.coroutinestudy">

    <application
        android:name=".CoroutineUsecasesOnAndroidApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CoroutineStudy">

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.CoroutineStudy.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".usecase.coroutines.usecase1.PerformSingleNetworkRequestActivity"/>
        <activity android:name=".usecase.coroutines.usecase2.Perform2SequentialNetworkRequestsActivity"/>
        <activity android:name=".usecase.coroutines.usecase2.callbacks.SequentialNetworkRequestsCallbacksActivity"/>
        <activity android:name=".usecase.coroutines.usecase2.rx.SequentialNetworkRequestsRxActivity"/>
        <activity android:name=".usecase.coroutines.usecase3.PerformNetworkRequestsConcurrentlyActivity"/>
        <activity android:name=".usecase.coroutines.usecase4.VariableAmountOfNetworkRequestsActivity"/>
        <activity android:name=".usecase.coroutines.usecase5.NetworkRequestWithTimeoutActivity"/>
        <activity android:name=".usecase.coroutines.usecase6.RetryNetworkRequestActivity"/>
        <activity android:name=".usecase.coroutines.usecase7.TimeoutAndRetryActivity"/>
        <activity android:name=".usecase.coroutines.usecase7.callbacks.TimeoutAndRetryCallbackActivity"/>
        <activity android:name=".usecase.coroutines.usecase7.rx.TimeoutAndRetryRxActivity"/>
        <activity android:name=".usecase.coroutines.usecase8.RoomAndCoroutinesActivity"/>
        <activity android:name=".usecase.coroutines.usecase9.DebuggingCoroutinesActivity"/>
        <activity android:name=".usecase.coroutines.usecase10.CalculationInBackgroundActivity"/>
        <activity android:name=".usecase.coroutines.usecase11.CooperativeCancellationActivity"/>
        <activity android:name=".usecase.coroutines.usecase12.CalculationInSeveralCoroutinesActivity"/>
        <activity android:name=".usecase.coroutines.usecase13.ExceptionHandlingActivity"/>
        <activity android:name=".usecase.coroutines.usecase14.ContinueCoroutineWhenUserLeavesScreenActivity"/>
        <activity android:name=".usecase.coroutines.usecase15.WorkManagerActivity"/>
        <activity android:name=".usecase.coroutines.usecase16.PerformanceAnalysisActivity"/>
        <activity android:name=".usecase.coroutines.usecase17.PerformCalculationOnMainThreadActivity"/>
